<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Apps</title>
  </head>
  <body>
    <h1>Your Apps</h1>
    <%- include('../partials/_navbar.ejs') %>
    <a href="/users/<%=user._id%>/applications/new">Add an App</a>
    <ul>
      <% applications.forEach((applications)=>{ %>
      <li>
        <!-- Add a link around each application, directing to the 'show' page -->
        <a href="/users/<%= user._id %>/applications/<%= applications._id %>">
          <%= applications.title %> at <%= applications.company %>
        </a>
      </li>
      <% }) %>
    </ul>
  </body>
</html>